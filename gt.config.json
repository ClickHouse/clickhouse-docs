{
  "defaultLocale": "en",
  "files": {
    "mdx": {
      "include": [
        "docs/**/*.mdx",
        "knowledgebase/**/*.mdx",
        "docs/**/*.md",
        "knowledgebase/**/*.md"
      ],
      "transform": [
        {
          "match": "^docs/(.*)\\.mdx$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-docs/current/$1.mdx"
        },
        {
          "match": "^knowledgebase/(.*)\\.mdx$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-blog/current/$1.mdx"
        },
        {
          "match": "^docs/(.*)\\.md$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-docs/current/$1.md"
        },
        {
          "match": "^knowledgebase/(.*)\\.md$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-blog/current/$1.md"
        }
      ]
    },
    "json": {
      "include": [
        "docs/**/*.json",
        "knowledgebase/**/*.json",
        "i18n/[locale]/**/*.json"
      ],
      "transform": [
        {
          "match": "^docs/(.*)\\.json$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-docs/current/$1.json"
        },
        {
          "match": "^knowledgebase/(.*)\\.json$",
          "replace": "i18n/{locale}/docusaurus-plugin-content-blog/current/$1.json"
        }
      ]
    },
    "gt": {
      "output": "i18n/locales/[locale].json"
    }
  },
  "locales": [
    "en",
    "zh",
    "ru",
    "jp"
  ],
  "customMapping": {
    "jp": {
      "code": "ja"
    }
  },
  "options": {
    "experimentalLocalizeStaticImports": true,
    "docsImportRewrites": [
      {
        "match": "@site/docs",
        "replace": "@site/i18n/[locale]/docusaurus-plugin-content-docs/current"
      }
    ],
    "skipFileValidation": {
      "mdx": true
    },
    "experimentalAddHeaderAnchorIds": "default",
    "experimentalClearLocaleDirs": true
  }
}